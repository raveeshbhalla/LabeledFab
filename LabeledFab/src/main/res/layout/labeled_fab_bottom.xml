<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true" >

    <android.support.v7.widget.CardView
        android:id="@+id/labeledFab_container_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_label_margin"
        android:layout_below="@+id/labeledFab_container_floatingActionButton">
        <TextView
            android:id="@+id/labeledFab_container_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_label_padding"
            tools:text="Label"/>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/labeledFab_container_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="auto"
        tools:src="@android:drawable/ic_menu_search"
        android:layout_alignParentTop="true"/>

</RelativeLayout>